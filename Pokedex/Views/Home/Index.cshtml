@model HomeVM
@{
    ViewData["Title"] = "Home";
}

<div class="pt-5 container">
    <div class="row">
        <div class="col mx-auto text-center">
            <h1 class="display-4 text-white">Pokédex</h1>
            <div class="my-3">
                <button id="btn-all" onclick="filter('')" 
                class="btn btn-md my-2 text-white bg-secondary btn-filter">Ver
                    Todos</button>
                @foreach(var tipo in Model.Tipos)
                {    
                <button id="btn-@tipo.Nome" class="btn btn-sm my-2 text-white btn-filter"
                    style="background-color:@tipo.Cor"
                    onclick="filter('@tipo.Nome')">
                    @tipo.Nome
                </button>
                }
            </div>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">

        @foreach (var pokemon in Model.Pokemons)
        {
        <!-- Card Pokemon - Inicio -->
        <div class="col">
            <a href="#" class="text-decoration-none">
                <div class="card" style="background-color: rgba(119, 204, 85, 0.75)">
                    <img src="@pokemon.Imagem" class="card-img-top" alt="Bulbasaur" />
                    <div class="card-body">
                        <h5 class="card-text mb-1 text-white">Nº 001</h5>
                        <h3 class="card-title text-dark">Bulbasaur</h3>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex gap-2 my-2">
                                <a href="#" class="btn text-white"
                                    style="background-color:rgba(119, 204, 85, 1)">Planta</a>
                                <a href="#" class="btn text-white" style="background-color:#a59">Venenoso</a>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <!-- Card Pokemon - Fim -->
        }
        <div id="zeroPokemon" class="col-lg-12 text-center d-none">
            <h1 class="my-3 text-danger">Nenhum Pokemon Encontrado</h1>
        </div>
    </div>
</div>

@section Script{
    <script src="~/js/site.js"></script>
}